@using System.Globalization
@model IEnumerable<PG_Management_MongoDB.Models.Tenant>
@{
    ViewBag.Title = "All Tenants";
    Layout = "_Layout";
}

<h2>All Tenants</h2>
<p>
    @*<a asp-action="Create">Add New Tenant</a>*@
    @Html.ActionLink("Add New Tenant","Create")
</p>

<div style="text-align: center">
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(tenant => tenant.Name)
            </th>
            <th>
                @Html.DisplayNameFor(tenant => tenant.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(tenant => tenant.Address)
            </th>
            <th>
                @Html.DisplayNameFor(tenant => tenant.Rent)
            </th>
            <th>
                @Html.DisplayNameFor(tenant => tenant.PaidStatus)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(tenant => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(tenant => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(tenant => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(tenant => item.Rent)
                </td>
                <td>
                    @Html.DisplayFor(tenant => item.PaidStatus.AsBoolean)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>